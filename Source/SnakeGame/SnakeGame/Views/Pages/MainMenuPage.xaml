<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SnakeGame.Views.Pages.MainMenuPage"
    Title="MainMenuPage">
    <Grid
        RowDefinitions="Auto,*">
        <Label
            Grid.Row="0"
            Text="Main menu"/>
        <ScrollView
            Grid.Row="1">
            <VerticalStackLayout>
                <Button
                    Text="Play" 
                    Command="{Binding PlayCommand}" />
                <Button
                    Text="Settings" 
                    Command="{Binding SettingsCommand}" />
                <Button
                    Text="Quit"
                    Command="{Binding QuitCommand}" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>